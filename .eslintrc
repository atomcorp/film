{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "jest",
    "babel"
  ],
  "rules": {
    "linebreak-style": 0,
    "object-curly-spacing": 0,
    "babel/no-invalid-this": 1,
    "no-invalid-this": 0,
    "max-len": [2, {"code": 80, "ignorePattern": "^import\\W.*"}]
  }
}